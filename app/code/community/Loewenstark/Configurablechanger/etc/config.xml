<?xml version="1.0"?>
<config>
    <modules>
        <Loewenstark_Configurablechanger>
            <version>0.0.1</version>
        </Loewenstark_Configurablechanger>
    </modules>
    <global>
        <blocks>
            <configurablechanger>
                <class>Loewenstark_Configurablechanger_Block</class>
            </configurablechanger>
        </blocks>
        <models>
            <configurablechanger>
                <class>Loewenstark_Configurablechanger_Model</class>
            </configurablechanger>
        </models>
    </global>
    <frontend>
        <routers>
            <loewenstark_configurablechanger>
                <use>standard</use>
                <args>
                    <module>Loewenstark_Configurablechanger</module>
                    <frontName>configurablechanger</frontName>
                </args>
            </loewenstark_configurablechanger>
        </routers>   
        <layout>
            <updates>
                <loewenstark_configurablechanger>
                    <file>configurablechanger.xml</file>
                </loewenstark_configurablechanger>
            </updates>
        </layout>
    </frontend>
    <global>
        <events>
            <controller_action_predispatch_checkout_cart_add>
                <observers>
                    <configurablechanger>
                        <class>configurablechanger/observer</class>
                        <method>addToCartPreDispatch</method>
                    </configurablechanger>
                </observers>
            </controller_action_predispatch_checkout_cart_add>
        </events>
    </global>
</config>